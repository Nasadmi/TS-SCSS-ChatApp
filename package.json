{
  "name": "chatapp",
  "version": "1.0.0",
  "description": "ChatApp with TypeScript and SCSS",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "cross-env NODE_ENV=prod node build/app",
    "dev": "concurrently --kill-others \"sass --watch scss/:public/css\" \"cross-env NODE_ENV=dev tsnodemon -x 'node build/app'\"",
    "lint": "eslint ./**/*",
    "lint:fix": "eslint ./**/* --fix",
    "build": "tsc && sass scss/:public/css"
  },
  "author": "Nasadmi",
  "license": "MIT",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/morgan": "^1.9.9",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-standard-with-typescript": "^43.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "tsnodemon": "^1.2.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "bcrypt": "5.1.1",
    "cookie-parser": "1.4.6",
    "cors": "2.8.5",
    "dotenv": "16.3.1",
    "ejs": "3.1.9",
    "express": "4.18.2",
    "express-session": "1.17.3",
    "morgan": "1.10.0",
    "mysql2": "3.7.0",
    "passport": "0.7.0",
    "passport-local": "1.0.0",
    "sass": "1.69.7",
    "socket.io": "4.7.4"
  }
}
